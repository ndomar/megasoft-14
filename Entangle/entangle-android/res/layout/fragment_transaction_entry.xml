<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <com.megasoft.entangle.views.RoundedImageView
        android:id="@+id/requester_avatar"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="30dp"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/horizental"
        android:src="@drawable/ic_action_person" />

    <TextView
        android:id="@+id/requester"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@id/requester_avatar"
        android:layout_marginTop="8dp"
        android:layout_toRightOf="@id/requester_avatar"
        android:textSize="@dimen/textMedium"/>


    <TextView
        android:id="@+id/request_description"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/requester_avatar"
        android:layout_below="@id/requester" />
    
    <TextView 
        android:id="@+id/transaction_amount"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignLeft="@id/requester_avatar"
        android:layout_below="@id/request_description"/>

</RelativeLayout>