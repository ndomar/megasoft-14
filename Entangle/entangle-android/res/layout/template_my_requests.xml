<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:background="@color/darkWhite"
    android:fillViewport="true" >

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/marginLarge"
        android:background="@color/darkWhite" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/marginMedium"
            android:layout_marginTop="@dimen/marginMedium"
            android:orientation="vertical" >

            <TextView
                android:id="@+id/openRequestsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/marginSmall"
                android:layout_marginLeft="@dimen/boxMargin"
                android:text="@string/openRequests"
                android:textColor="@color/blue" />

            <LinearLayout
                android:id="@+id/openRequests"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boxMargin"
                android:layout_marginRight="@dimen/boxMargin"
                android:background="@color/darkWhite"
                android:orientation="vertical" >
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/smallSeparator"
                android:layout_margin="@dimen/boxMargin"
                android:background="@color/orange" />

            <TextView
                android:id="@+id/frozenRequestsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/marginSmall"
                android:layout_marginLeft="@dimen/boxMargin"
                android:layout_marginTop="@dimen/marginSmall"
                android:text="@string/frozenRequests"
                android:textColor="@color/blue" />

            <LinearLayout
                android:id="@+id/frozenRequests"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boxMargin"
                android:layout_marginRight="@dimen/boxMargin"
                android:background="@color/darkWhite"
                android:orientation="vertical" >
            </LinearLayout>

            <View
                android:layout_width="fill_parent"
                android:layout_height="@dimen/smallSeparator"
                android:layout_margin="@dimen/boxMargin"
                android:background="@color/orange" />

            <TextView
                android:id="@+id/closedRequestsText"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="@dimen/marginSmall"
                android:layout_marginLeft="@dimen/boxMargin"
                android:layout_marginTop="@dimen/marginSmall"
                android:text="@string/closedRequests"
                android:textColor="@color/blue" />

            <LinearLayout
                android:id="@+id/closedRequests"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/boxMargin"
                android:layout_marginRight="@dimen/boxMargin"
                android:background="@color/darkWhite"
                android:orientation="vertical" >
            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="@dimen/paddingSmall" />
        </LinearLayout>
    </ScrollView>
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:weightSum="5" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/boxMargin"
            android:layout_weight="1"
            android:background="@color/blue" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/boxMargin"
            android:layout_weight="1"
            android:background="@color/orange" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/boxMargin"
            android:layout_weight="1"
            android:background="@color/cyan" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/boxMargin"
            android:layout_weight="1"
            android:background="@color/megenta" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="@dimen/boxMargin"
            android:layout_weight="1"
            android:background="@color/lightGreen" />
    </LinearLayout>

</RelativeLayout>