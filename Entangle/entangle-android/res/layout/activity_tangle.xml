<RelativeLayout xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="fill_parent"
    android:layout_alignParentTop="true"
    android:background="@color/darkWhite"
    android:fillViewport="true" >

    <LinearLayout
        android:id="@+id/tangleNameLayout"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:orientation="horizontal" >

        <TextView
            android:id="@+id/tangleName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="sans-serif-condensed"
            android:text="@string/tangleName"
            android:textSize="20sp"
            android:textStyle="italic" />

        <ImageView
            android:contentDescription="Filter The stream"
            android:id="@+id/filterButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_action_search" />
    </LinearLayout>

    <ScrollView
        android:id="@+id/scroll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/darkWhite" >

        <LinearLayout
            android:id="@+id/streamLayout"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="@dimen/boxMargin"
            android:layout_marginRight="@dimen/boxMargin"
            android:background="@color/darkWhite"
            android:orientation="vertical" >
        </LinearLayout>
    </ScrollView>

</RelativeLayout>