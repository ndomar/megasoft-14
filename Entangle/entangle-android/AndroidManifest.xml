<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.megasoft.entangle"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.megasoft.entangle.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.megasoft.entangle.TangleActivity"
            android:label="@string/title_activity_view_stream" >
        </activity>
        <activity
            android:name="com.megasoft.entangle.Members"
            android:label="@string/title_activity_members" >
        </activity>
        <activity
            android:name="com.megasoft.entangle.ProfileActivity"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name="com.megasoft.entangle.CreateRequestActivity"
            android:label="@string/title_activity_request_information" >
        </activity>
        <activity
            android:name="com.megasoft.entangle.ConfirmInviteUserActivity"
            android:label="@string/title_activity_invite_users_confirmations"
            android:parentActivityName="com.megasoft.entangle.InviteUserActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.megasoft.entangle.InviteUsers" />
        </activity>
        <activity
            android:name="com.megasoft.entangle.InviteUserActivity"
            android:label="@string/title_activity_invite_users" >
        </activity>
        <activity
            android:name="com.megasoft.entangle.EditProfileActivity"
            android:label="@string/title_activity_edit_profile"
            android:parentActivityName="com.megasoft.entangle.ProfileActivity" >
            <meta-data
                android:name="android.support.PARENT_ACTIVITY"
                android:value="com.megasoft.entangle.ProfileActivity" />
        </activity>
        <activity
            android:name="com.megasoft.entangle.OfferActivity"
            android:label="@string/title_activity_offer" >
        </activity>
    </application>

</manifest>