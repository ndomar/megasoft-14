<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.megasoft.entangle"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="18" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/AppTheme" >
        <activity
            android:name="com.megasoft.entangle.MainActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="com.megasoft.entangle.ViewStream"
            android:label="@string/title_activity_view_stream" >
        </activity>
        <activity
            android:name="com.megasoft.entangle.Members"
            android:label="@string/title_activity_members" >
        </activity>
        <activity
            android:name="com.megasoft.entangle.Profile"
            android:label="@string/title_activity_profile" >
        </activity>
        <activity
            android:name="com.megasoft.entangle.Invite"
            android:label="@string/title_activity_invite" >
        </activity>
        <activity
            android:name="com.megasoft.entangle.RequestInformation"
            android:label="@string/title_activity_request_information" >
        </activity>
    </application>

</manifest>